# GIGECONOMY OS - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=8000

# ============================================
# WEB APP
# ============================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME="GIGECONOMY OS"
VITE_APP_VERSION=0.1.0

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/gigeconomy_os
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# ============================================
# LAYER 1: MARKETPLACE SERVICES
# ============================================

# Platform API Keys (to be obtained)
GOJEK_API_KEY=
GOJEK_API_SECRET=

GRAB_API_KEY=
GRAB_API_SECRET=

UPWORK_API_KEY=
UPWORK_API_SECRET=

PROJECTS_CO_ID_API_KEY=

# AI Scheduler
OPENAI_API_KEY=
ML_MODEL_PATH=./models

# Blockchain Reputation
BLOCKCHAIN_NETWORK=polygon-mumbai # testnet
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=
CONTRACT_ADDRESS=

# ============================================
# LAYER 2: SUPPORT SERVICES
# ============================================

# Insurance Providers
INSURANCE_PROVIDER_API_KEY=
INSURANCE_PROVIDER_SECRET=

# Payment Processing
PAYMENT_GATEWAY=xendit # xendit, midtrans, etc.
PAYMENT_API_KEY=
PAYMENT_SECRET_KEY=
PAYMENT_WEBHOOK_SECRET=

# E-wallet Integrations
GOPAY_MERCHANT_ID=
OVO_MERCHANT_ID=
DANA_MERCHANT_ID=

# ============================================
# LAYER 3: COLLECTIVE SERVICES
# ============================================

# Rate Tracking
RATE_SCRAPER_INTERVAL=3600000 # 1 hour in ms

# Legal Fund
LEGAL_FUND_WALLET_ADDRESS=

# ============================================
# EXTERNAL SERVICES
# ============================================

# Email Service
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="GIGECONOMY OS <noreply@gigeconomy-os.com>"

# SMS Service (for notifications)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Analytics
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
SENTRY_DSN=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=60000 # 1 minute
RATE_LIMIT_MAX=60 # requests per window

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_MARKETPLACE_AGGREGATOR=false
FEATURE_AI_SCHEDULING=false
FEATURE_BLOCKCHAIN_REPUTATION=false
FEATURE_MICRO_INSURANCE=false
FEATURE_INSTANT_PAY=false
FEATURE_DIGITAL_UNION=false
FEATURE_RATE_TRANSPARENCY=false
